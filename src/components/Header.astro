---
import HeaderLink from './HeaderLink.astro';
---

<header>
    <nav>
        <a href="/" class="logo-link">
        <img src="/logo.png" alt="Eco Living Journey Logo" style="height: 60px; width: auto; display: block; max-width: 100%;" />
        </a>
        <div class="internal-links">
            <HeaderLink href="/">Home</HeaderLink>
            <HeaderLink href="/blog">Blog</HeaderLink>
            <HeaderLink href="/about">About</HeaderLink>
        </div>
    </nav>
</header>

<style>
    header { 
        margin: 0; 
        padding: 1em; 
        background: white; 
        box-shadow: 0 2px 8px rgba(0,0,0, 5%); 
    }
    nav { 
        display: flex; 
        align-items: center; 
        justify-content: space-between; 
        max-width: 960px; 
        margin: 0 auto; 
    }
    .logo-link img { 
        height: 120px; /* Stronger presence on PC */
        width: auto; 
        display: block; 
    }
    .internal-links { display: flex; gap: 1.5em; }

    /* Mobile specific centering */
    @media (max-width: 720px) { 
        nav { 
            flex-direction: column; /* Stacks logo on top of links */
            gap: 1em;
        }
        .logo-link img { 
            height: 90px; /* Balanced size for mobile */
        }
        .internal-links { 
            justify-content: center;
            width: 100%;
        }
    }
</style>