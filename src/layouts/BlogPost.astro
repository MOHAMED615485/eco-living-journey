---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, heroImage } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
        <style>
            main {
                width: 100%;
                max-width: 960px;
                margin: 0 auto;
                padding: 2em 1em;
            }
          .hero-image img {
    display: block;
    margin: 0 auto;
    width: 100%;
    height: 500px; /* High-quality PC height */
    object-fit: cover !important; /* Forces the image to crop, not squash */
    border-radius: 16px;
}
@media (max-width: 720px) {
    .hero-image img { height: 300px; } /* Proportional height for mobile */
}
            .prose {
                width: 720px;
                max-width: 100%;
                margin: 0 auto;
                padding: 1em;
                color: #333333;
                line-height: 1.8;
                font-size: 1.15rem;
            }
            .title {
                margin-bottom: 1em;
                padding: 1em 0;
                text-align: center;
            }
            .title h1 {
                margin: 0 0 0.5em 0;
                font-size: 2.5em;
                color: #1a202c;
            }
            .date {
                margin-bottom: 0.5em;
                color: #718096;
            }
            
            /* Nature Green Styles for Ethan's Brand */
            .prose h2 {
                color: #2f855a;
                margin-top: 1.5em;
                border-bottom: 2px solid #e2e8f0;
                padding-bottom: 0.3em;
            }
            .prose h3 {
                color: #2d3748;
                margin-top: 1.5em;
            }

            @media (max-width: 720px) {
                .hero-image img {
                    height: 280px; /* Perfect height for phones */
                }
                .title h1 {
                    font-size: 2em;
                }
            }
        </style>
    </head>

    <body>
        <Header />
        <main>
            <article>
                <div class="hero-image">
                    {heroImage && <img width={1020} height={510} src={heroImage.src} alt={title} />}
                </div>
                <div class="prose">
                    <div class="title">
                        <div class="date">
                            <FormattedDate date={pubDate} />
                        </div>
                        <h1>{title}</h1>
                        <hr />
                    </div>
                    <slot />
                </div>
            </article>
        </main>
        <Footer />
    </body>
</html>