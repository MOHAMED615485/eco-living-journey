---
import HeaderLink from './HeaderLink.astro';
---

<header>
    <nav>
        <a href="/" class="logo-link">
        <img src="/logo.png" alt="Eco Living Journey Logo" style="height: 60px; width: auto; display: block; max-width: 100%;" />
        </a>
        <div class="internal-links">
            <HeaderLink href="/">Home</HeaderLink>
            <HeaderLink href="/blog">Blog</HeaderLink>
            <HeaderLink href="/about">About</HeaderLink>
        </div>
    </nav>
</header>

<style>
    header { 
        padding: 1em; 
        background: white; 
        box-shadow: 0 2px 8px rgba(0,0,0, 0.05); 
    }
    nav { 
        display: flex; 
        align-items: center; 
        justify-content: space-between; /* Keeps logo left, links right on PC */
        max-width: 960px; 
        margin: 0 auto; 
    }
    .logo-link img { 
        height: 100px; /* Large but controlled */
        width: auto; 
        display: block; 
    }
    .internal-links { 
        display: flex; 
        gap: 2em; 
    }

    @media (max-width: 720px) { 
        nav { 
            flex-direction: column; /* Stacks them for mobile */
            gap: 1.5em;
            text-align: center;
        }
        .logo-link img { 
            height: 80px; /* Slightly smaller for mobile */
            margin: 0 auto;
        }
        .internal-links { 
            justify-content: center;
            width: 100%;
        }
    }
</style>